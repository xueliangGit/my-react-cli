.title
  text-align: center
  padding 5px
  font-size: 20px
.top-bar
  padding 10px
  box-sizing: border-box
  width 100%
  .select
    width 10%
    margin-right 1%
    height 30px
    line-height 30px
    padding: 0 5px
  input
    width 69%
    display inline-block
    height 30px
    line-height 30px
    box-sizing: border-box
    padding: 0 5px
  .button 
    border: 1px #666 solid 
    text-align center
    border-radius: 5px
    width 18%
    display inline-block
    margin-left 1%
    height 30px
    line-height 30px
    vertical-align: middle
.myvideo
  width 100%
  margin 0 auto
  display block
  height 56.25vw
.info
  padding 10px
  .info-title
    border-left: 5px red solid 
    padding-left 10px
    font-size: 16px
    margin-bottom 10px
  .info-des
    font-size: 14px
    color #666666
    text-align: justify
  .info-tip
    font-size: 12px
    color #999999  
    vertical-align middle
    margin-left 15px 
  .info-img
    display inline-block
    width: 20%;
    margin: 0 2%
    img 
      border: 1px solid gainsboro;
      padding:10px;
      width 100%
      border-radius: 8px;